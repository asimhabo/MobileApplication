<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="4dp" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="8dp"
                    android:text="Places Of Interest "
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="26dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/line_one"
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/green" />

                    <View
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@+id/line_one"
                        android:background="@color/green"
                        tools:ignore="UnknownId" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_Accommodation"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:onClick="onClickCard">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circlebackground"
                                android:padding="10dp"
                                android:src="@drawable/accommodation_interests_part" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Accommodation"
                                android:textColor="@color/colorBackground" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/grey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="(12 items)"
                                android:textColor="@color/darkgrey"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_atm"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:onClick="onClickCard">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circlebackground"
                                android:padding="10dp"
                                android:src="@drawable/atm_interests_part" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="ATM / Money"
                                android:textColor="@color/colorBackground" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/grey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="(12 items)"
                                android:textColor="@color/darkgrey"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/line_two"
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/green" />

                    <View
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@+id/line_two"
                        android:background="@color/green" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_avm"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:onClick="onClickCard">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circlebackground"
                                android:padding="10dp"
                                android:src="@drawable/avm_shopping_interests_part" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="AVM / Shopping"
                                android:textColor="@color/colorBackground" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/grey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="(12 items)"
                                android:textColor="@color/darkgrey"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_cinemas"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:onClick="onClickCard">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circlebackground"
                                android:padding="10dp"
                                android:src="@drawable/cinemas_interests_part" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Cinemas"
                                android:textColor="@color/colorBackground" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/grey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="(12 items)"
                                android:textColor="@color/darkgrey"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/line_three"
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/green" />

                    <View
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@+id/line_three"
                        android:background="@color/green"
                        tools:ignore="UnknownId" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_hospitals"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:onClick="onClickCard">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circlebackground"
                                android:padding="10dp"
                                android:src="@drawable/hospitals_interests_part" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Hospitals"
                                android:textColor="@color/colorBackground" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/grey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="(12 items)"
                                android:textColor="@color/darkgrey"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_languageSchools"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:onClick="onClickCard">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circlebackground"
                                android:padding="10dp"
                                android:src="@drawable/language_schools_interests_part" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Language Schools"
                                android:textColor="@color/colorBackground" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/grey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="(12 items)"
                                android:textColor="@color/darkgrey"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/line_four"
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/green" />

                    <View
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@+id/line_four"
                        android:background="@color/green"
                        tools:ignore="UnknownId" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_restaurants"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:onClick="onClickCard">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circlebackground"
                                android:padding="10dp"
                                android:src="@drawable/restaurants_interests_part" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Restaurants"
                                android:textColor="@color/colorBackground" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/grey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="(12 items)"
                                android:textColor="@color/darkgrey"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardView_sports"
                        android:layout_width="160dp"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:onClick="onClickCard">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="60dp"
                                android:background="@drawable/circlebackground"
                                android:padding="10dp"
                                android:src="@drawable/sports_interests_part" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Sports"
                                android:textColor="@color/colorBackground" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@color/grey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="(12 items)"
                                android:textColor="@color/darkgrey"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/line_five"
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/green" />

                    <View
                        android:layout_width="160dp"
                        android:layout_height="3dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:layout_toRightOf="@+id/line_five"
                        android:background="@color/green"
                        tools:ignore="UnknownId" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/colorBackground"
        app:itemTextColor="@color/colorBackground"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

