<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:elevation="4dp" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/colorBackground"
                android:text="We'd love to hear from you! "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="70dp"
                android:paddingRight="8dp"
                android:paddingLeft="12dp"
                android:textSize="20dp"
                android:textColor="@color/colorBackground"
                android:text="Whether you have a question about features, trials, need a demo or anything else, our team is ready to answer all your questions."/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="180dp">


                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="32dp"
                    android:paddingTop="12dp"
                    android:paddingLeft="20dp"
                    android:src="@drawable/ic_headset_mic_black_24dp" />

                <TextView
                    android:id="@+id/phone_txt"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorBackground"
                    android:textSize="16dp"
                    android:text="+850 21222000"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="32dp"
                    android:paddingTop="12dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ic_mail_outline_black_24dp" />

                <TextView
                    android:id="@+id/email_txt"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorBackground"
                    android:textSize="16dp"
                    android:text="enquiries@publictransport.com.tr"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="280dp"
                android:textColor="@color/colorBackground"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:text="Kastamonu Yolu Demir Çelik Kampüsü,"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="300dp"
                android:textColor="@color/colorBackground"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:text="Kılavuzlar Köyü/Merkez" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="320dp"
                android:textColor="@color/colorBackground"
                android:textSize="16dp"
                android:paddingLeft="20dp"
                android:text="Karabük/78050"/>

        </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/colorBackground"
        app:itemTextColor="@color/colorBackground"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>